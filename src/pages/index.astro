---
// import ConfettiButton from "src/components/ConfettiButton/Button.astro";
import Navbar from "../components/Navbar.astro";
import Title from '../components/Title.astro';
import { ConfettiButton } from "../components/ConfettiButton/ConfettiButton";
---

<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Александр Ершов | Фронтенд-разработчик</title>
	</head>
	<body>
		<header><Navbar /></header>
		<main>
			<section class="about">
				<img src="avatar.jpg" alt="profile picture" />
				<article>
					<p>Привет, мир! Я Александр</p>
					<Title text="Фронтенд-разработчик" />
				</article>
				<div class="button-group">
					<!--<ConfettiButton message="Moё резюме" link={"./ершов-фронтенд-резюме.pdf"}/>-->
					<!--<ConfettiButton message="Написать мне" link={"https://t.me/a_yearshow"} />-->
					<ConfettiButton message="Moё резюме" link="./ершов-фронтенд-резюме.pdf" client:load />
					<ConfettiButton message="Написать мне" link="https://t.me/a_yearshow" client:load />
				</div>
			</section>
		</main>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		font-size: 18px;
		box-sizing: border-box;
	}

	main {
		margin: 50px auto 0 auto;
		max-width: 1020px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 100px;
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 40px;
		width: 100%;
		height: calc(100vh - 50px);
		text-align: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 0 20px;
	}

	.about > article > p {
		margin-bottom: 20px;
	}

	.about .button-group {
		display: flex;
		gap: 20px;
	}

	.about > img {
		width: 150px;
		border-radius: 9999px;
		object-fit: cover;
	}

	.about > article {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 80px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 50px 20px 100px 20px;
	}

	.skills > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.work {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 0 20px 100px 20px;
	}

	.work > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.contact {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 50px;
		width: 100%;
		padding: 0 20px 100px 20px;
	}

	@media screen and (max-width: 700px) {
		.about > img {
			width: 100px;
		}
	} 
</style>