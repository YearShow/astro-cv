---
import Button from "../components/Button.astro";
import Navbar from "../components/Navbar.astro";
import Title from '../components/Title.astro';
import SkillCard from "../components/SkillCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Footer from "../components/Footer.astro";
---

<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Александр Ершов | Фронтенд-разработчик</title>
	</head>
	<body>
		<header><Navbar /></header>
		<main>
			<section class="about">
				<img src="avatar.jpg" alt="profile picture" />
				<article>
					<p>Привет! Я Александр</p>
					<Title text="Фронтенд-разработчик" />
				</article>
				<div class="button-group">
					<Button message="Moё резюме" link={"./cv.pdf"}/>
					<Button message="Написать мне" link={"https://t.me/a_yearshow"} />
				</div>
			</section>
			<section class="skills" id="skills">
				<Title text="Skills & Technologies"/>
				<section>
					<SkillCard 
						title="Frontend Development"
						description="Developing websites with JavaScript and the best frameworks like React and Astro"
						icon="/design.svg"
					/>
					<SkillCard 
						title="Backend Development"
						description="Databases like PostgreSQL and MongoDB. Developing APIs with JavaScript"
						icon="/server.svg"
					/>
					<SkillCard 
						title="Automation"
						description="Automating processes with Python"
						icon="/python.svg"
					/>
				</section>
			</section>
			<section class="work">
				<Title text="My Work" />
				<section>
					<ProjectCard 
						title="Marksown Web Editor"
						description="Simple and Minimalist Markdown Web Eitor"
						link="https://markwriter.tech"
					/>
					<ProjectCard 
						title="My Neovim Setup"
						description="Neovim setup with Lua and packer | Powershell with"
						link="https://markwriter.tech"
					/>
					<ProjectCard 
						title="My Youtube Channel"
						description="Youtube channel"
						link="https://markwriter.tech"
					/>
				</section>
			</section>
			<section class="contact">
				<Title text="Tell me about your next project" />
				<Button message="Send message" icon="/email.svg" link="" />	
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		box-sizing: border-box;
	}

	main {
		margin: 50px auto 0 auto;
		max-width: 1020px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 100px;
	}

	.about {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 40px;
		width: 100%;
		height: calc(100vh - 50px);
		text-align: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 0 20px;
	}

	.about .button-group {
		display: flex;
		gap: 20px;
	}

	.about > img {
		width: 150px;
		border-radius: 9999px;
		object-fit: cover;
	}

	.about > article {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 80px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 50px 20px 100px 20px;
	}

	.skills > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.work {
		display: flex;
		flex-direction: column;
		gap: 50px;
		width: 100%;
		align-items: center;
		border-bottom: 1px solid rgb(30, 30, 30, .3);
		padding: 0 20px 100px 20px;
	}

	.work > section {
		display: flex;
		gap: 40px;
		flex-wrap: wrap;
		justify-content: center;
	}

	.contact {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 50px;
		width: 100%;
		padding: 0 20px 100px 20px;
	}

	@media screen and (max-width: 700px) {
		main {
			margin: 0 auto;
		}

		.about {
			height: 80vh;
		}

		.about > img {
			width: 100px;
		}
	} 
</style>