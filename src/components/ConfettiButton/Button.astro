---
const { message, link } = Astro.props;
---

<a class="link-btn" href={link} target="_blank"><button class="btn"><span>{message}</span></button></a>

<style>
    .link-btn {
        text-decoration: none;
    }
    .btn {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        width: 150px;
        height: 45px;
        background-color: #1e1e1e;
        border-radius: 8px;
        border: none;
        transition: all .2s;
        cursor: pointer;
        box-shadow:  0 1px 2px 0 rgba(255, 255, 255, 0.3) inset;
    }
    .btn > span {
        color: #fff;
        text-decoration: none;
        font-size: 16px;
        font-weight: 400;
    }
    .btn > img  {
        width: 24px;
    }
    .btn:hover {
        background: #555;
    }
</style>
